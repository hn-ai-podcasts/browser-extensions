{
  "manifest_version": 3,
  "name": "HN AI Podcasts",
  "version": "0.1.3",
  "description": "Create and listen podcasts in your language on Hacker News",
  "icons": {
    "16": "icons/hn_podcast_logo_16.png",
    "32": "icons/hn_podcast_logo_32.png",
    "48": "icons/hn_podcast_logo_48.png",
    "128": "icons/hn_podcast_logo_128.png"
  },
  "permissions": ["storage", "offscreen", "alarms"],
  "host_permissions": [
    "https://news.ycombinator.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HN AI Podcasts",
      "default_icon": {
        "16": "icons/hn_podcast_logo_16.png",
        "32": "icons/hn_podcast_logo_32.png"
      }
  },
    "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://news.ycombinator.com/*"],
      "js": [
        "browser-polyfill.min.js",
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}